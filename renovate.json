{
  "extends": [
    "config:base",
    "schedule:monthly",
    "group:all"
  ],
  "ignoreUnstable": true,
  "automerge": true,
  "automergeType": "branch",
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["codecov"],
      "groupName": "codecov"
    },
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint"
    },
    {
      "matchPackagePatterns": ["lodash"],
      "groupName": "lodash"
    },
    {
      "matchPackagePatterns": ["nyc"],
      "groupName": "nyc"
    },
    {
      "matchPackagePatterns": ["perf_hooks"],
      "groupName": "perf_hooks"
    },
    {
      "matchPackagePatterns": ["tape"],
      "groupName": "tape"
    },
    {
      "matchPackagePatterns": ["typescript"],
      "groupName": "typescript"
    }
  ]
}
